# .editorconfig

# Top-level configuration
root = true

# Todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Archivos HTML
[*.html]
indent_style = space
indent_size = 2

# Archivos CSS
[*.css]
indent_style = space
indent_size = 2

# Archivos JS
[*.js]
indent_style = space
indent_size = 2

# Archivos JSON
[*.json]
indent_style = space
indent_size = 2